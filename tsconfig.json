{
  "compilerOptions": {
    "outDir": "build",
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "es2015",
    "jsx": "react",
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "dist/types",
    "types": ["node"],
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "include": ["./src/**/*.tsx", "./src/@types/**/*.d.ts"],
  "exclude": ["node_modules", "build", "dist", "example", "rollup.config.js"]
}
